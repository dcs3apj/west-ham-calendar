<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd"
	default-autowire="byName">


	<bean id="googleCalendarDaoFactory"
		class="uk.co.unclealex.hammers.calendar.server.calendar.SpringGoogleCalendarDaoFactory">
		<property name="gameFormatter">
			<bean class="uk.co.unclealex.hammers.calendar.server.calendar.google.GameFormatter"/>	
		</property>
		<property name="calendarFormatter">
			<bean class="uk.co.unclealex.hammers.calendar.server.calendar.google.CalendarFormatter"/>
		</property>
	</bean>

	<bean id="calendarFactory" class="uk.co.unclealex.hammers.calendar.server.calendar.TokenServiceOauthCalendarFactory">
		<property name="httpTransport">
			<bean class="com.google.api.client.http.javanet.NetHttpTransport"/>
		</property>
		<property name="jsonFactory">
			<bean class="com.google.api.client.json.jackson.JacksonFactory"/>
		</property>
	</bean>
	
</beans>
