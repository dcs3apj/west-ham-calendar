<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd"
	default-autowire="byName">

	<bean id="mainUpdateService"
		class="uk.co.unclealex.hammers.calendar.server.update.MainUpdateServiceImpl" />

	<bean id="updateRunnable" class="uk.co.unclealex.hammers.calendar.server.update.UpdateRunnable"/>

	<bean id="updateCalendarJob" class="uk.co.unclealex.hammers.calendar.server.update.UpdateCalendarJob"
		init-method="initialise" destroy-method="destroy">
		<property name="runnable">
			<bean parent="hibernateSessionAwareProxy">
				<property name="targetName" value="updateRunnable"/>
			</bean>
		</property>
	</bean>

</beans>
