<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.calendarTitle {
			width: 100%;
			text-transform: uppercase;
			font-size: larger;
		}
		.calendarDescription {
			width: 100%;
			font-size: smaller;
			text-align: right;
		}
		.configurationButtons {
			

		}
	</ui:style>
	
	<g:FlowPanel>
		<g:Label ui:field="calendarTitle" addStyleNames="{style.calendarTitle}"/>
		<g:Label ui:field="calendarDescription" addStyleNames="{style.calendarDescription}"/>
	</g:FlowPanel>

</ui:UiBinder>