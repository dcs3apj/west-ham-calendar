<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <display-name>Hammers Calendar</display-name>

 <context-param>
  <param-name>contextConfigLocation</param-name>
  <param-value>
  	classpath:applicationContext-hammers-security.xml
  	classpath:application-contexts/auth/context.xml
  	classpath:application-contexts/calendar/context.xml
  	classpath:application-contexts/calendar/dao.xml
  	classpath:application-contexts/dao/context.xml
  	classpath:application-contexts/dao/jndi.xml
  	classpath:application-contexts/dates/context.xml
  	classpath:application-contexts/defaults/context.xml
  	classpath:application-contexts/html/context.xml
  	classpath:application-contexts/html/mainpage.xml
  	classpath:application-contexts/update/cron.xml
  	classpath:application-contexts/update/context.xml
  	classpath:application-contexts/tickets/context.xml
  	classpath:application-contexts/view/context.xml
  </param-value>
 </context-param>

 <filter>
  <filter-name>hibernate</filter-name>
  <filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
  <init-param>
   <param-name>singleSession</param-name>
   <param-value>true</param-value>
  </init-param>
 </filter>

	<filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

 <filter-mapping>
  <filter-name>hibernate</filter-name>
  <url-pattern>/*</url-pattern>
 </filter-mapping>
 
     <filter-mapping>
      <filter-name>springSecurityFilterChain</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
 
 <listener>
  <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
 </listener>
 <listener>
  <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
 </listener>

  <servlet>
    <servlet-name>userAttendanceServlet</servlet-name>
    <servlet-class>uk.co.unclealex.hammers.calendar.server.servlet.UserAttendanceServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>userAttendanceServlet</servlet-name>
    <url-pattern>/hammers/user</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>anonymousAttendanceServlet</servlet-name>
    <servlet-class>uk.co.unclealex.hammers.calendar.server.servlet.AnonymousAttendanceServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>anonymousAttendanceServlet</servlet-name>
    <url-pattern>/hammers/anonymous</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>adminAttendanceServlet</servlet-name>
    <servlet-class>uk.co.unclealex.hammers.calendar.server.servlet.AdminAttendanceServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>adminAttendanceServlet</servlet-name>
    <url-pattern>/hammers/admin</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>hammers.html</welcome-file>
  </welcome-file-list>

  <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/hammers</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
